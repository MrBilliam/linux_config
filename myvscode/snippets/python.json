	// }
	"Python3 Shebang" : {
		"prefix": ["shebang", "#!"],
		"body": "#! /usr/bin/env python3",
		"description": "python 3 shebang for unix"
	},
	"if main statement" : {
		"prefix": "ifmain",
		"body": [
			"if __name__ == \"__main__\":",
			"    ${2:main()}",
			""
		],
		"description": "A file's runtime branch"
	},
	"Simple Class": {
		"prefix": "class",
		"body": [
			"class $1:",
			"    def __init__(self):",
			"        $0",
			"",
			"    def __repr__(self):",
			"        return \"<class $1>\"",
			""
		],
		"description": "A simple class snippet with a repr."
	}
}